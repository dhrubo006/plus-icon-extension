{
  "manifest_version": 3,
  "name": "Plus Icon Extension",
  "version": "1.0.0",
  "description": "A Chrome extension to capture the URL of the current page.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "static/js/*.js", "static/css/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
